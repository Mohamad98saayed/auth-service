{
     "compilerOptions": {
          "module": "commonjs",
          "target": "ES6",
          "lib": [
               "ES6"
          ],
          "allowJs": true,
          "outDir": "build",
          "rootDir": "src",
          "strict": true,
          "noImplicitAny": true,
          "esModuleInterop": true,
          "resolveJsonModule": true,
          "emitDecoratorMetadata": true,
          "experimentalDecorators": true,
          "baseUrl": "./",
          "paths": {
               "@/*": [
                    "src/*"
               ],
          }
     },
     "include": [
          "src/**/*"
     ],
     "exclude": [
          "node_modules",
          "build"
     ],
}